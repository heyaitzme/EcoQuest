.container {
  padding: 40rpx;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 40rpx;
  margin-top: 90rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
}

.games-grid {
  display: flex;
  flex-direction: column;
  gap: 30rpx; /* Space between game cards */
}

.game-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.05);
}

.game-icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
}

.game-info {
  flex: 1;
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.game-description {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.game-button {
  width: 200rpx;
  height: 80rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
}
