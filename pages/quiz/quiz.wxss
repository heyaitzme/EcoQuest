.quiz-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 20rpx;
  background-color: #e6f7ff;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-bar {
  width: 80%;
}

.level-title {
  font-size: 28rpx;
  color: #008080;
  font-weight: bold;
}

.question-section {
  margin-top: 50rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx #d9d9d9;
  text-align: center;
}

.question-text {
  font-size: 32rpx;
  color: #333333;
}

.options-section {
  margin-top: 30rpx;
  width: 100%;
}

.option-button {
  width: 100%;
  padding: 20rpx;
  margin-top: 10rpx;
  background-color: #00cc99;
  color: white;
  font-size: 28rpx;
  border-radius: 10rpx;
}

.option-button:active {
  background-color: #00997a;
}

.next-button {
  margin-top: 50rpx;
  width: 80%;
  padding: 20rpx;
  background-color: #ffcc00;
  color: #333333;
  font-size: 28rpx;
  border-radius: 10rpx;
}

.confetti-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  overflow: hidden;
}

@keyframes fall {
  0% {
    transform: translateY(-50vh) rotate(0deg);
  }
  100% {
    transform: translateY(50vh) rotate(360deg);
  }
}

@keyframes drift {
  0% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(50px);
  }
  100% {
    transform: translateX(0);
  }
}

.confetti {
  position: absolute;
  width: 10rpx;
  height: 30rpx;
  background-color: #ffcc00;
  animation: fall 3s linear infinite, drift 3s ease-in-out infinite;
}

.confetti:nth-child(2n) {
  background-color: #00cc99;
}

.confetti:nth-child(3n) {
  background-color: #ff6666;
}

.confetti:nth-child(4n) {
  background-color: #6666ff;
}

.confetti:nth-child(5n) {
  background-color: #ff99cc;
}
