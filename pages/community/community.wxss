.container {
  padding: 20px;
  background-color: #ffffff;
}

.new-post {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.new-post input {
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
  margin-bottom: 10px;
}

.new-post button {
  align-self: flex-end;
  background-color: #1aad19;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
}

.posts .post {
  border-bottom: 1px solid #eee;
  padding: 15px 0;
}

.post-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.author {
  font-weight: bold;
}

.timestamp {
  color: #999;
  font-size: 12px;
}

.post-content {
  margin-bottom: 10px;
}

.post-actions button {
  background: none;
  border: none;
  color: #1aad19;
  cursor: pointer;
}